.content swiper {
  height: 400rpx;
}
.content swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.uni-grid-item {
  text-align: center;
}
.uni-grid-item .t-icon {
  line-height: 90rpx;
  width: 110rpx;
  height: 110rpx;
  margin: 10rpx auto;
  font-size: 25px;
}
.uni-grid-item text {
  font-size: 14px;
  color: #885e46;
  font-family: sans-serif;
}
.line {
  width: 95%;
  margin: 20rpx auto;
  border: 1rpx solid #CCCCCC;
}
.recommend {
  width: 95%;
  margin: 0 auto;
}
.recommend .recommend-title {
  height: 80rpx;
  line-height: 60rpx;
  color: #885e46;
  font-family: sans-serif;
  font-size: 40rpx;
  font-weight: bold;
}
.recommend .recommend-img {
  margin: 0 auto;
}
.recommend .recommend-img image {
  width: 712rpx;
  height: 370rpx;
